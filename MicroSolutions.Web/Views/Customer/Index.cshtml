@model IEnumerable<MicroSolutions.Web.Models.CustomerViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Customers</h1>

@{
	if (TempData["Message"] != null && TempData["MessageType"] != null)
	{
		<div class="alert @TempData["MessageType"] alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			@TempData["Message"].ToString()
		</div>
	}
}
<br/>
<div class="row">
	<div id="message"></div>
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h5>Customer list</h5>
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				@{

					<table width="100%" class="table table-striped table-bordered table-hover" id="customer-table">
						<thead>
							<tr>
								<th>Customer Name</th>
								<th>Contact person</th>
								<th>Contact number</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="odd gradeX">
									<td>@item.CustomerName</td>
									<td>@item.ContactPersonName</td>
									<td>@item.ContactNumber</td>
									<td>
										<a href="@Url.Action("Edit", "Customer", new { item.Id })"><i class="fa fa-pencil-square-o"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				}
			</div>
			<!-- /.panel-body -->
		</div>
		<a href="@Url.Action("AddCustomer", "Customer")" class="btn btn-primary pull-right"><i class="fa fa-user fa-fw"></i>Add new customer</a>
	</div>
	<!-- /.col-lg-8 -->
</div>

