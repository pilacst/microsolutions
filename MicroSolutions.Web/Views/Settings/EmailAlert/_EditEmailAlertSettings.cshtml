@model MicroSolutions.Web.Models.EmailConfigurationViewModel
@{
	ViewBag.Title = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit email alert info</h2>
<!-- /.row -->
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-9 col-lg-offset-1">
						@using (Html.BeginForm("UpdateEmailConfigurations", "Settings", FormMethod.Post))
						{
							@Html.AntiForgeryToken()
							@Html.HiddenFor(model => model.Id)

							<div class="form-horizontal">
								@Html.ValidationSummary(true, "", new { @class = "text-danger" })
								<div class="form-group">
									@Html.LabelFor(model => model.FromEmail, htmlAttributes: new { @class = "control-label col-md-4" })
									<div class="col-md-8">
										@Html.EditorFor(model => model.FromEmail, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.FromEmail, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(model => model.FromEmailPassword, htmlAttributes: new { @class = "control-label col-md-4" })
									<div class="col-md-8">
										@Html.EditorFor(model => model.FromEmailPassword, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.FromEmailPassword, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(model => model.PortNumber, htmlAttributes: new { @class = "control-label col-md-4" })
									<div class="col-md-8">
										@Html.EditorFor(model => model.PortNumber, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.PortNumber, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(model => model.SmtpAddress, htmlAttributes: new { @class = "control-label col-md-4" })
									<div class="col-md-8">
										@Html.EditorFor(model => model.SmtpAddress, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.SmtpAddress, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(model => model.ToEmail, htmlAttributes: new { @class = "control-label col-md-4" })
									<div class="col-md-8">
										@Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(model => model.WarningPeriod, htmlAttributes: new { @class = "control-label col-md-4" })
									<div class="col-md-8">
										@Html.EditorFor(model => model.WarningPeriod, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/yyyy" } })
										@Html.ValidationMessageFor(model => model.WarningPeriod, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group pull-right">
									<div class="col-md-10">
										<input type="submit" value="Update" class="btn btn-success" />
									</div>
								</div>
							</div>
						}
					</div>

				</div>
				<!-- /.row (nested) -->
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
