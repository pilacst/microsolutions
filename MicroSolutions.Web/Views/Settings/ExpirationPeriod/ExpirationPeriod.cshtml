@model IEnumerable<MicroSolutions.Data.Models.ExpirationPeriod>

@{
    <table width="100%" class="table table-striped table-bordered table-hover" id="expiration-period-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td>@item.ExpirationPeriodName</td>
                    <td>@item.ExpirationPeriodValue</td>
                    <td>
                        <a href="#" onclick="return editExpirationPeriod('@item.Id')"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="#" onclick="return confirmDeleteExpirationPeriod('@item.Id')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@Html.Partial("ExpirationPeriod/_EditExpirationPeriod", new MicroSolutions.Web.Models.ExpirationPeriodViewModel())

<a href="#" onclick="return expirationPeriodAddModel()" class="btn btn-primary pull-right">Add new expiration period</a>


<script src="~/Content/controllers/ExpirationPeriod.js"></script>

