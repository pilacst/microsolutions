@model MicroSolutions.Web.Models.PartsForInvoiceViewModel

<div class="modal fade" id="add-parts-for-invoice-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Add parts</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label for="UserRole">Vendor: </label>
					@Html.DropDownListFor(model => model.Vendor.Id, (SelectList)ViewBag.VendorList, new { @class = "select2_single form-control", @id="vendor-id" })
				</div>
				<div class="form-group">
					<label for="UserRole">Item type: </label>
					@Html.DropDownListFor(model => model.ItemType.Id, (SelectList)ViewBag.ItemTypeList, new { @class = "select2_single form-control", @id="item-type-id" })
				</div>
				<div class="form-group col-sm-6">
					@Html.LabelFor(model => model.PartNumber)
					@Html.TextBoxFor(model => model.PartNumber, null, new { @class = "form-control" , @id="part-number-value"})
					@Html.ValidationMessageFor(model => model.PartNumber)
				</div>
				<div class="form-group col-sm-6">
					@Html.LabelFor(model => model.Quantity)
					@Html.TextBoxFor(model => model.Quantity, null, new { @class = "form-control", @id="quantity-value" })
					@Html.ValidationMessageFor(model => model.Quantity)
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.SerialNumber)
					@Html.TextAreaFor(model => model.SerialNumber, htmlAttributes: new { @class = "form-control", @id="serial-numbers-value" })
					@Html.ValidationMessageFor(model => model.SerialNumber)
				</div>
				<div class="form-group">
					<label for="UserRole">Supplier: </label>
					@Html.DropDownListFor(model => model.Supplier.Id, (SelectList)ViewBag.SupplierList, new { @class = "select2_single form-control", @id="supplier-id" })
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Description)
					@Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @id= "part-description-value" })
					@Html.ValidationMessageFor(model => model.Description)
				</div>
				<div class="form-group">
					<label for="UserRole">Expiration period: </label>
					@Html.DropDownListFor(model => model.ExpirationPeriod.Id, (SelectList)ViewBag.ExpirationPeriodList, new { @class = "select2_single form-control", @id="expiration-period-id" })
				</div>
				<div class="form-group col-sm-6">
					@Html.LabelFor(model => model.StartingDate)
					@Html.TextBoxFor(model => model.StartingDate, null, new { @class = "form-control", @placeholder = "dd/MM/yyyy", @id ="start-date-value"})
					@Html.ValidationMessageFor(model => model.StartingDate)
				</div>
				<div class="form-group col-sm-6">
					@Html.LabelFor(model => model.EndDate)
					@Html.TextBoxFor(model => model.EndDate, null, new { @class = "form-control", @placeholder = "dd/MM/yyyy", @id ="end-date-value" })
					@Html.ValidationMessageFor(model => model.EndDate)
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" onclick="AddNewPartToInvoice();">Add</button>
			</div>
		</div>
	</div>
</div>
